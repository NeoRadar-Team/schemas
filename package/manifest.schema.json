{
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "namespace": {
      "type": "string"
    },
    "createdAt": {
      "type": "string"
    },
    "datasets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "mapLayers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "source": {
            "type": "string",
            "enum": [
              "airport",
              "vor",
              "ndb",
              "fix",
              "label",
              "region",
              "geo",
              "runway",
              "lowAirway",
              "highAirway",
              "sid",
              "star",
              "gate",
              "artcc",
              "artccLow",
              "artccHigh"
            ]
          },
          "minZoom": {
            "type": "number"
          },
          "maxZoom": {
            "type": "number"
          },
          "stroke": {
            "type": "boolean"
          },
          "pointType": {
            "oneOf": [
              {
                "type": "string",
                "enum": ["circle", "icon", "text"]
              },
              {
                "type": "string",
                "pattern": "^(circle|icon|text)(\\+(circle|icon|text))*$"
              }
            ],
            "default": "circle"
          },
          "defaultIcon": {
            "type": "string"
          },
          "pickable": {
            "type": "boolean"
          }
        },
        "required": ["name", "type", "source"],
        "additionalProperties": false
      }
    }
  },
  "required": ["id", "name", "namespace", "createdAt"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
